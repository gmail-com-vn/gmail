            transform: none;
            top: 20px;
            left: 0;
            right: 0;
            border: none;
        }

        .about-laptop {
            display: none;
        }

        .div-create-next {
            margin-top: 40px;
        }

        .create-user {
            position: absolute;
            left: 15px;
        }

        .next>.btn-next {
            position: absolute;
            right: 15px;
        }

        .quen-email {
            position: absolute;
            left: 10px;
        }

        .Before-FS {
            width: 324px;

        }
    }
</style>